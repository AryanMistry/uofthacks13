# ============================================
# SpaceIdentity - Environment Variables
# Copy this to .env.local for local development
# Copy this to .env for Docker/Vultr deployment
# ============================================

# Required: AI API Key
# Get your key at: https://aistudio.google.com/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Optional: Groq API (faster inference, alternative to Gemini)
# Get your key at: https://console.groq.com/keys
GROQ_API_KEY=

# Optional: Hugging Face API (for additional models)
HUGGINGFACE_API_KEY=

# ============================================
# Vultr Configuration (for production deployment)
# ============================================

# Set to 'true' when deployed on Vultr
VULTR_DEPLOYMENT=false

# Vultr Object Storage (S3-compatible)
# Get these from: Vultr Dashboard > Products > Object Storage
VULTR_OBJECT_STORAGE_HOSTNAME=ewr1.vultrobjects.com
VULTR_OBJECT_STORAGE_ACCESS_KEY=
VULTR_OBJECT_STORAGE_SECRET_KEY=
VULTR_OBJECT_STORAGE_BUCKET=spaceidentity
VULTR_OBJECT_STORAGE_REGION=ewr1
